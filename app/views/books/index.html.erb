<div class="page-container">
	<h2 class="page-title">Books</h2>

	<table>
		<tr>
			<th class="book-list">Title</th>
			<th class="book-list">Body</th>
		</tr>

		<% @books.each do |book| %>
		<tr>
			<td class="book-list">
				<%= book.title %>
			</td>
			<td class="book-list">
				<%= book.body %>
			</td>

			<td class="book-list">
				<span class="underline">
					<%= link_to "Show", book_path(book) %>
				</span>
			</td>

			<td class="book-list">
				<span class="underline">
					<%= link_to "Edit", edit_book_path(book) %>
				</span>
			</td>

			<td class="book-list">
				<span class="underline">
					<%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %>
				</span>
			</td>
		</tr>
		<% end %>
	</table>

	<h3 class="section-title">New Book</h3>

	<%= form_for(@book) do |f| %>

	<% if flash[:error].present? %>
	<ul class="errors">
		<h5 class="error-count"><%= flash[:error].length %>errors</h5>
		<% flash[:error].each do |e| %>
		<li><span class="error-text"><%= e %></span></li>
		<% end %>
	</ul>
	<% end %>

	<h5>Title</h5>
	<%= f.text_field :title %>

	<h5>Body</h5>
	<%= f.text_area :body %>

	<p></p>
	<%= f.submit 'Create Book' %>

	<% end %>
</div>

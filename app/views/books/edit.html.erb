
<div class="page-container">
	<h2>Editing Book</h2>

<%= form_for(@book) do |f| %>
    <h5>title</h5>
    <%= f.text_field :title %>
    <h5>Body</h5>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>

    <p class="edit-text">
		<span class="underline">
		    <%= link_to "Show", book_path(@book) %>
	    </span>

	     | <span class="underline">
			<%= link_to "Back", books_path %>
		</span>
	</p>
<% end %>
</div>
